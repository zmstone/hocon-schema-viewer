authentication = [
  {
    mechanism = password_based
    backend = mysql
    password_hash_algorithm = {name = sha256, salt_position = prefix}
    query = "<YOUR_QUERY_HERE>"
    query_timeout = "5s"
    server = "<YOUR_SERVER:PORT>"
    database = "<YOUR_DATABASE_NAME>"
    pool_size = 8
    username = root
    password = "<YOUR_PASSWORD>"
    ssl = {enable = false}
  }
]